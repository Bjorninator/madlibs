<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="332dp">

        <TextView
            android:layout_width="337dp"
            android:layout_height="184dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp"
            android:text="“Mad Libs” are short stories that have blanks called placeholders to be filled in.Once all placeholders are filled in, it shows them the resulting silly story. Select one of the following stories:"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="337dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/madlibs" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="201dp"
        android:layout_height="326dp">

        <Button
            android:id="@+id/start10"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="35dp"
            android:onClick="dance"
            android:text="dance"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="416dp" />

        <Button
            android:id="@+id/start8"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start7"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:onClick="university"
            android:text="university"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="416dp" />

        <Button
            android:id="@+id/start9"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start8"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:onClick="clothes"
            android:text="clothes"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="416dp" />

        <Button
            android:id="@+id/start6"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="28dp"
            android:onClick="simple"
            android:text="simple"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="416dp" />

        <Button
            android:id="@+id/start7"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start6"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:onClick="tarzan"
            android:text="tarzan"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="416dp" />
    </RelativeLayout>

</LinearLayout>